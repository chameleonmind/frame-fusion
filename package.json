{
	"name": "frame-fusion",
	"version": "0.0.1",
	"publishConfig": {
		"access": "public"
	},
	"files": ["dist", "styles"],
	"description": "Animate sequence of layered images in a single frame",
	"author": {
		"name": "Miloš Milošević",
		"email": "highlander.mm@gmail.com",
		"url": "https://chameleonmind.dev"
	},
	"packageManager": "pnpm@9.4.0",
	"engines": {
		"node": ">=16"
	},
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./styles/*": "./styles/*"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build-fast": "tsup src/index.ts --format cjs,esm",
		"dev": "tsup --watch",
		"build": "tsup",
		"test": "vitest run",
		"lint": "tsc",
		"ci": "npm run build && npm run check-exports && npm run lint && npm run test",
		"local-release": "changeset version && changeset publish",
		"prepublishOnly": "npm run ci",
		"check-types": "tsc --noEmit",
		"check-exports": "attw --pack ."
	},
	"license": "MIT",
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.15.4",
		"@biomejs/biome": "1.8.2",
		"@changesets/cli": "^2.27.7",
		"happy-dom": "^14.12.3",
		"tsup": "^8.1.0",
		"typescript": "^5.5.2",
		"vitest": "^1.6.0"
	}
}
