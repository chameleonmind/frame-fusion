{
	"name": "frame-fusion",
	"version": "0.0.1",
	"publishConfig": {
		"access": "public"
	},
	"files": ["dist", "styles"],
	"description": "Animate sequence of layered images in a single frame",
	"author": {
		"name": "Miloš Milošević",
		"email": "highlander.mm@gmail.com",
		"url": "https://chameleonmind.dev"
	},
	"packageManager": "pnpm@9.4.0",
	"engines": {
		"node": ">=16"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		},
		"./styles/*": "./styles/*"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build-fast": "tsup src/index.ts --format cjs,esm",
		"dev": "tsup src/index.ts --format cjs,esm  --dts-resolve --watch",
		"build": "pnpm run build-fast --dts-resolve --minify",
		"test": "vitest run",
		"prepublishOnly": "pnpm run build",
		"check-types": "tsc --noEmit"
	},
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"happy-dom": "^14.12.3",
		"tsup": "^8.1.0",
		"typescript": "^5.5.2",
		"vitest": "^1.6.0"
	}
}
